<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E2E6E5" >
   

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >

            <EditText
                android:id="@+id/et_account"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/register_phonenumber_icon"
                android:ems="10"
                android:hint="11位手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:singleLine="true" >
            </EditText>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_account"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line" />

            <EditText
                android:id="@+id/et_vcode"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@id/line1"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/register_msg_icon"
                android:ems="10"
                android:hint="短信验证码"
                android:inputType="number"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:singleLine="true" >
            </EditText>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_vcode"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@id/line2"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/login_edittext_pwd_icon"
                android:ems="10"
                android:hint="密码6-16位字母和数字"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:tag="pwd" >
            </EditText>
            <TextView
                android:id="@+id/tv_getVCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_vcode"
                android:layout_alignRight="@id/et_vcode"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/applicationMainColor" />

            <TextView
                android:id="@+id/tv_showPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_pwd"
                android:layout_alignRight="@id/et_pwd"
                android:layout_marginRight="10dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:text="显示密码"
                android:textColor="@color/applicationMainColor" />
        </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape_clickup"
        android:text="立 即 注 册"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>